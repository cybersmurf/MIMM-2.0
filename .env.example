# === DATABASE ===
# PostgreSQL connection string (local dev)
ConnectionStrings__DefaultConnection=Host=localhost;Port=5432;Database=mimm_dev;Username=postgres;Password=your_password

# === Production Docker Compose Variables ===
# Used by docker-compose.prod.yml for rootless Docker deployment
POSTGRES_USER=mimmuser
POSTGRES_PASSWORD=<GENERATE_SECURE_PASSWORD>
POSTGRES_DB=mimm

# Redis connection (optional)
ConnectionStrings__Redis=localhost:6379

# === Production Redis Password ===
REDIS_PASSWORD=<GENERATE_SECURE_PASSWORD>

# === AUTHENTICATION (JWT) ===
# Generate a secure 256-bit key: openssl rand -base64 32
# For production: openssl rand -base64 64 (512-bit)
Jwt__Key=your-secure-256-bit-key-change-this-immediately
JWT_SECRET_KEY=<GENERATE_64_CHAR_SECRET_KEY>
Jwt__Issuer=https://localhost:7001
JWT_ISSUER=https://mimm.yourdomain.com
Jwt__Audience=mimm-frontend
JWT_AUDIENCE=mimm-frontend
Jwt__AccessTokenExpirationMinutes=60
Jwt__RefreshTokenExpirationDays=7

# === CORS ===
Cors__AllowedOrigins__0=https://localhost:5001
Cors__AllowedOrigins__1=http://localhost:5000

# === Production URLs ===
FRONTEND_URL=https://mimm.yourdomain.com
BACKEND_URL=https://mimm.yourdomain.com/api

# === LAST.FM API ===
# Get your API key: https://www.last.fm/api/account/create
LastFm__ApiKey=your_lastfm_api_key
LastFm__SharedSecret=your_lastfm_shared_secret
LastFm__CallbackUrl=https://localhost:7001/api/integrations/lastfm/callback
LASTFM_API_KEY=<YOUR_LASTFM_API_KEY>
LASTFM_API_SECRET=<YOUR_LASTFM_API_SECRET>

# === SPOTIFY API ===
# Get from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=<YOUR_SPOTIFY_CLIENT_ID>
SPOTIFY_CLIENT_SECRET=<YOUR_SPOTIFY_CLIENT_SECRET>

# === DISCOGS API (optional) ===
# Get token: https://www.discogs.com/settings/developers
Discogs__Token=your_discogs_token
DISCOGS_CONSUMER_KEY=<YOUR_DISCOGS_CONSUMER_KEY>
DISCOGS_CONSUMER_SECRET=<YOUR_DISCOGS_CONSUMER_SECRET>

# === EMAIL (SendGrid) ===
# Get API key: https://sendgrid.com/
SendGrid__ApiKey=your_sendgrid_api_key
SendGrid__FromEmail=noreply@mimm.example.com
SendGrid__FromName=MIMM Support

# === APP SETTINGS ===
App__Name=MIMM
App__FrontendUrl=https://localhost:5001
App__EnableEmailVerification=false
App__MaxEntriesPerPage=20

# === DOCKER VERSION ===
VERSION=1.0.0

# === LOGGING ===
Serilog__MinimumLevel__Default=Information

# =============================================================================
# SECURITY NOTES FOR PRODUCTION
# =============================================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Replace all <GENERATE_*> placeholders with real values
# 3. Use strong passwords (min 32 characters): openssl rand -base64 32
# 4. Generate JWT key (64 characters): openssl rand -base64 64
# 5. Set file permissions: chmod 600 .env
# 6. Verify .env is in .gitignore
# 7. Backup .env securely (encrypted storage)
# 8. Never commit .env to version control!
